<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md p-0">
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-section" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/flights" class="nav-link px-3">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a href="/seat-classes" class="nav-link px-3">Seat Classes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/planes" class="nav-link px-3">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/airports" class="nav-link px-3">Airports</a>
                        </li>
                        <li class="nav-item">
                            <a href="/bills" class="nav-link px-3">Bills</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="bi bi-house-door-fill icon-1"></i></a>
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                Flights
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                {{title}}
                            </li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">{{title}}</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card p-2">
                <form>
                    <h4>Flight Segment Information:</h4>
                    <div class="row mx-auto">
                        <div class="col-4">
                            <div class="row">
                                <div class="form-group">
                                    <label for="seatClass">Departure Airport</label>
                                    <select class="form-control form-select" id="seatClass">
                                        {{#each airportList}}
                                        <option value={{id}}>{{airport_name}} ({{symbol_code}}) - {{city}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <label for="seatClass">Departure Time</label>
                                    <input type="text" class="datepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="row">
                                <div class="form-group">
                                    <label for="seatClass">Arrival Airport</label>
                                    <div class="col">
                                        <select class="form-control form-select" id="seatClass">
                                            {{#each airportList}}
                                            <option value={{id}}>{{airport_name}} ({{symbol_code}}) - {{city}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <label for="seatClass">Arrival Time</label>

                                    <div class="input-group date" id="datepicker">
                                        <input type="text" class="form-control" id="date" />
                                        <span class="input-group-append">
                                            <span class="input-group-text bg-light d-block">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </span>

                                    </div>


                                </div>
                            </div>
                        </div>
                        <div class="col-4 d-flex align-items-center justify-content-center">
                            <div class="row">
                                <div class="form-group">
                                    <label for="seatClass">Plane</label>
                                    <select class="form-control form-select" id="seatClass">
                                        {{#each planeList}}
                                        <option value={{id}}>{{aircraft_number}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <label>Add</label>
                                    <a href="javascript:void(0)" class="btn btn-primary d-block" id="add-product-btn"
                                        onclick="addSize()">
                                        <i class="bi bi-plus"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div style="width: 90%;" class="mx-auto">
                        <div class="table-responsive">
                            <table class="table mb-0 table-striped table-bordered" id="table-extend-flight">
                                <thead>
                                    <tr>
                                        <th class="text-center">Departure</th>
                                        <th class="text-center">Arrival</th>
                                        <th class="text-center">Plane</th>
                                    </tr>
                                </thead>
                                <tbody class="list">
                                    {{!-- {{#each extendFlight}}
                                    <tr>
                                        <td class="text-center">
                                            <h5>{{departure_city}} ({{departure_airport}})</h5>
                                            <div>{{departure_airport_name}}</div>
                                            <div>{{#dateTime departure_time}}{{/dateTime}}</div>
                                        </td>
                                        <td class="text-center">
                                            <h5>{{arrival_city}} ({{arrival_airport}})</h5>
                                            <div>{{arrival_airport_name}}</div>
                                            <div>{{#dateTime arrival_time}}{{/dateTime}}</div>
                                        </td>
                                        <td class="text-center">{{plane}}</td>
                                    </tr>
                                    {{/each}} --}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <h4>Seat Class Information:</h4>
                    <div class="row mx-auto">
                        <div class="col-4">
                            <div class="form-group">
                                <label for="seatClass">Seat Class</label>
                                <select class="form-control form-select" id="seatClass">
                                    {{#each seatClassList}}
                                    <option value={{id}}>{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label for="totalCount">Total Count</label>
                                <input id="totalCount" type="number" class="form-control" value="1" min="1" />
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="price">Price</label>
                                <input id="price" type="number" class="form-control" value="100000" min="100000" />
                            </div>
                        </div>
                        <div class="col-1">
                            <div class="form-group">
                                <label>Add</label>
                                <a href="javascript:void(0)" class="btn btn-primary d-block" id="add-product-btn"
                                    onclick="addSize()">
                                    <i class="bi bi-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div style="width: 50%;" class="mx-auto">
                        <div class="table-responsive">
                            <table class="table mb-0 table-striped table-bordered" id="table-extend-flight">
                                <thead>
                                    <tr>
                                        <th class="text-center">Seat Class Name</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Total Seat</th>
                                    </tr>
                                </thead>
                                <tbody class="list">
                                    {{!-- {{#each seatClass}}
                                    <tr>
                                        <td class="text-center">
                                            <h5>{{name}}</h5>
                                        </td>
                                        <td class="text-center">{{#currencyFormat price}}{{/currencyFormat}}</td>
                                        <td class="text-center">{{totalSeatCount}}</td>
                                        <td class="text-center">{{bookedSeatCount}}</td>
                                    </tr>
                                    {{/each}} --}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<style>
    label {
        margin-left: 20px;
    }

    #datepicker {
        width: 180px;
        margin: 0 20px 20px 20px;
    }

    #datepicker>span:hover {
        cursor: pointer;
    }
</style>