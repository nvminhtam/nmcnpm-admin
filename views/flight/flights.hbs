<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md p-0">
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-section" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/flights" class="nav-link px-3">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a href="/seat-classes" class="nav-link px-3">Seat Classes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/planes" class="nav-link px-3">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/airports" class="nav-link px-3">Airports</a>
                        </li>
                        <li class="nav-item">
                            <a href="/bills" class="nav-link px-3">Bills</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a>
                            </li>
                            <li class="breadcrumb-item text-uppercase active">Flights</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Flights</h1>
                </div>
                <a href="/flights/addflight" class="btn btn-success ml-3">Create</a>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div id="errorMessage"></div>
            <div class="card mx-auto">
                <div class="mt-3 table-responsive">
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th style="width: 5%;">ID</th>
                                <th style="width: 15%;">Departure Airport</th>
                                <th style="width: 15%;">Arrival Airport</th>
                                <th style="width: 20%;">Departure Time</th>
                                <th style="width: 20%;">Arrival Time</th>
                                <th style="width: 10%;" class="text-center">Status</th>
                                <th class="text-center" style="width: 10%;"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            {{#each flights}}
                            <tr class='clickable-row' data-href='/flights/{{id}}'>
                                <td>{{id}}</td>
                                <td>{{departure_airport}}</td>
                                <td>{{arrival_airport}}</td>
                                <td>{{#dateTime departure_time}}{{/dateTime}}</td>
                                <td>{{#dateTime arrival_time}}{{/dateTime}}</td>
                                <td class="text-center">
                                    <span class="badge bg-{{checkFlightStatus status}}">{{status}}</span>
                                </td>
                                <td class="text-center">
                                    <a href="/flights/updateflight/{{id}}" class="btn btn-sm btn-primary">EDIT
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <div class="card-body d-flex justify-content-sm-end justify-content-center">
                    <ul class="pagination">
                        {{#page currentPage maxPage url}}
                        {{/page}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>