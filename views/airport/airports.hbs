<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md p-0">
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#nav-section"
                        type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/flights" class="nav-link px-3">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a href="/seat-classes" class="nav-link px-3">Seat Classes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/planes" class="nav-link px-3">Planes</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/airports" class="nav-link px-3">Airports</a>
                        </li>
                        <li class="nav-item">
                            <a href="/bills" class="nav-link px-3">Bills</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Airports</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Airports</h1>
                </div>
                <a href="/airports/addairport"
                    class="btn btn-success ml-3">Create</a>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div id="errorMessage"></div>
            <div class="card mx-auto">
                <div class="m-3">
                    <div class="row">
                        <div class="col-md-4 offset-md-8">
                            <form class="search-form search-form--light d-flex" action="/airports/search" method="get">
                                <input type="text"
                                    class="form-control search"
                                    placeholder="Search"
                                    name="keyword"
                                    autocomplete="off"
                                    value="{{search}}">
                                <button class="btn"
                                        type="submit"
                                        role="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th class="text-center" style="width: 5%;">ID</th>
                                <th style="width: 30%;">Airport Name</th>
                                <th style="width: 20%;">Province</th>
                                <th style="width: 20%;">City</th>
                                <th class="text-center" style="width: 15%;">Symbol Code</th>
                                <th class="text-center" style="width: 10%;"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            {{#each airports}}
                            <tr>
                                <td class="text-center">{{id}}</td>
                                <td>{{airport_name}}</td>
                                <td>{{province}}</td>
                                <td>{{city}}</td>
                                <td class="text-center">{{symbol_code}}</td>
                                <td class="text-center">
                                    <a href="/airports/updateairport/{{id}}" class="btn btn-sm btn-primary">EDIT</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>                        
                </div>
                <div class="card-body d-flex justify-content-sm-end justify-content-center">
                    <ul class="pagination">
                        {{#page currentPage maxPage url}}
                        {{/page}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>