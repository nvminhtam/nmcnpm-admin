    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item">
                                <a href="/"><i class="bi bi-house-door-fill icon-1"></i></a>
                            </li>
                            <li class="breadcrumb-item text-uppercase active">
                                Account
                            </li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Edit Account</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="row g-0">
                    <div class="col-lg-4 p-4">
                        <p class="fw-bold mb-3">Account Information</p>
                        <p class="text-muted mb-3">
                            Edit your account detailss.
                        </p>
                    </div>
                    <div class="col-lg-8 p-4">
                        <form id="update-admin-form">
                            <input name="id" id="id" type="hidden" value="{{user.id}}" class="form-control" />
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="lastName">Last Name</label>
                                        <input name="lastName" id="lastName" type="text" class="form-control" value="{{user.last_name}}" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="firstName">First Name (Required)</label>
                                        <input name="firstName" id="firstName" type="text" class="form-control" value="{{user.first_name}}" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="email">Email (Required)</label>
                                        <input id="email" name="email" type="email" value="{{user.email}}" class="form-control"/>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="telephone">Telephone</label>
                                        <input id="telephone" name="telephone" value="{{user.telephone}}" class="form-control" min="0"/>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="text-end mb-5">
                                    <button type="submit" class="btn btn-success">Save</button>
                                </div>
                            </div>
                            <div class="row">
                                <div id="errorMessage"></div>
                                <div id="successfullyMessage"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>