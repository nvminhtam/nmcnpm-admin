<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md p-0">
                <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav-section" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/flights" class="nav-link px-3">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a href="/seat-classes" class="nav-link px-3">Seat Classes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/planes" class="nav-link px-3">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/airports" class="nav-link px-3">Airports</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/bills" class="nav-link px-3">Bills</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Bills</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Bills</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div class="card">
                <div class="m-3">
                    <form action="/bills/search" method="get">
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <div class="search-form">
                                    <select name="status" class="form-control form-select" id="status">
                                        {{#select status}}
                                            <option value="all">All</option>
                                            <option value="Paid">Paid</option>
                                            <option value="Reserved">Reserved</option>
                                            <option value="Cancel">Cancel</option>
                                        {{/select}}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-8 mb-2">
                                <div class="search-form d-flex">
                                    <input type="text"
                                        class="form-control search"
                                        placeholder="Search"
                                        name="keyword"
                                        value="{{search}}">
                                    <button class="btn"
                                            type="submit"
                                            role="button">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th style="width: 5%;">ID</th>
                                <th style="width: 20%;">Customer Name</th>
                                <th style="width: 20%;">Email</th>
                                <th style="width: 15%;">Telephone</th>
                                <th style="width: 5%;">No.Passengers</th>
                                <th style="width: 25%;" class="text-center">Total</th>
                                <th style="width: 10%;" class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody class="list" id="bills">
                            {{#each bills}}
                            <tr class='clickable-row' data-href='/bills/{{id}}'>
                                <td>{{id}}</td>
                                <td>
                                    {{last_name}} {{first_name}}
                                </td>
                                <td>
                                    {{email}}
                                </td>
                                <td>
                                    {{telephone}}
                                </td>
                                <td class="text-center">
                                    {{num_of_travelers}}
                                </td>
                                <td class="text-center">
                                    {{currencyFormat amount}}
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-{{checkBillStatus status}}">{{status}}</span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>   
                <div class="card-body d-flex justify-content-sm-end justify-content-center">
                    <ul class="pagination">
                        {{#page currentPage maxPage url}}
                        {{/page}}
                    </ul>
                </div>                           
            </div>
        </div>
    </div>
</div>