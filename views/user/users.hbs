<div class="admin-section">
    <div class="header-section">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-md p-0">
                <button class="navbar-toggler"
                        data-bs-toggle="collapse"
                        data-bs-target="#nav-section"
                        type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="nav-section">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="/" class="nav-link px-3">Dashboard</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/users" class="nav-link px-3">Users</a>
                        </li>
                        <li class="nav-item">
                            <a href="/flights" class="nav-link px-3">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a href="/seat-classes" class="nav-link px-3">Seat Classes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/planes" class="nav-link px-3">Planes</a>
                        </li>
                        <li class="nav-item">
                            <a href="/airports" class="nav-link px-3">Airports</a>
                        </li>
                        <li class="nav-item">
                            <a href="/bills" class="nav-link px-3">Bills</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admins" class="nav-link px-3">Admins</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </div>
    <div class="intro-section">
        <div class="container">
            <div class="d-flex align-items-center py-30">
                <div class="flex-grow-1 flex-shrink-1">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 align-items-center">
                            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house-door-fill icon-1"></i></a></li>
                            <li class="breadcrumb-item text-uppercase active">Users</li>
                        </ol>
                    </nav>
                    <h1 class="m-0 fw-bold">Users</h1>
                </div>  
            </div>
        </div>
    </div>
    <div class="main-section">
        <div class="container">
            <div id="errorMessage"></div>
            <div class="card">
                <div class="m-3">
                    <div class="row">
                        <div class="col-md-4 offset-md-8">
                            <form class="search-form search-form--light d-flex" action="/users/search" method="get">
                                <input type="text"
                                    class="form-control search"
                                    placeholder="Search"
                                    name="keyword"
                                    autocomplete="off"
                                    value="{{search}}">
                                <button class="btn"
                                        type="submit"
                                        role="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0 table-striped">
                        <thead>
                            <tr>
                                <th style="width: 18px;" class="text-center">
                                </th>
                                <th style="min-width: 200px;">Name</th>
                                <th style="min-width: 150px;">Username</th>
                                <th>Email</th>
                                <th style="min-width: 200px;">Telephone</th>
                            </tr>
                        </thead>
                        <tbody class="list" id="users">
                            {{#each users}}
                            <tr>
                                <td class="text-center">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox"
                                            class="custom-control-input js-check-selected-row"
                                            id="customCheck_{{id}}">
                                        <label class="custom-control-label"
                                            for="customCheck_{{id}}"><span class="text-hide">Check</span></label>
                                    </div>
                                </td>
                                <td>
                                    <a href="/users/{{id}}">{{last_name}} {{first_name}}</a>
                                </td>
                                <td>{{username}}</td>
                                <td>
                                    <a href="mailto:{{email}}">{{email}}</a>
                                </td>
                                <td>{{telephone}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>      
                <div class="card-body d-flex justify-content-sm-end justify-content-center">
                    <ul class="pagination">
                        {{#page currentPage maxPage url}}
                        {{/page}}
                    </ul>
                </div>                       
            </div>
        </div>
    </div>
</div>